<body>
<%- include('../includes/navigation.ejs') %>
    <main>
      <h1>My Orders</h1>
      <% if (orders.length <=0) { %>
        <h2>No orders yet</h2>
        <% } else { %>
          <ul>
            <% orders.forEach(order => { %> 
              <li>
                <h2># <%= order._id %></h2>
                <ul>
                  <% order.products.forEach(p => { %>
                    <li><%= p.product.title %> (<%= p.quantity %>)</li>
                  <% }); %>
                </ul>
              </li>
            <% }); %>
          </ul>
          <% } %>
    </main>
<%- include('../includes/end.ejs') %>